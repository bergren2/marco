{
  "name": "marco-cli",
  "description": "Fetch list of projects which are ready for a release",
  "repository": "github:rehret/marco",
  "version": "0.0.9",
  "engines": {
	  "node": "^8.0.0 || ^9.0.0"
  },
  "bin": {
    "marco": "bin/marco"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "author": "Randy Ehret <randallehret@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "pretest": "yarn lint",
    "test": "mocha -r ts-node/register -r reflect-metadata spec/**/*.spec.ts",
    "test:coverage": "nyc yarn test",
    "lint": "tslint ./src/**/*.ts ./spec/**/*.ts",
    "prebuild": "yarn lint",
    "build": "webpack",
    "prebuild:production": "yarn lint",
    "build:production": "webpack --config webpack.production.js",
    "prepublishOnly": "yarn clean && yarn build:production",
    "start": "node bin/marco",
    "clean": "n-clean dist"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "inversify": "^4.13.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "simple-git": "^1.92.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.8",
    "@types/rimraf": "^2.0.2",
    "awesome-typescript-loader": "^5.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.1",
    "mocha": "^5.1.1",
    "npm-build-tools": "^2.2.5",
    "nyc": "^11.8.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typemoq": "^2.1.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  }
}
